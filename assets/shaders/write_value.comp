#version 310 es
layout(local_size_x = 1) in;

layout(set = 0, binding = 0) writeonly buffer SSBO
{
    float value;
};

layout(rgba16f, set = 0, binding = 1) writeonly uniform mediump image2D uImage;

layout(std430, push_constant) uniform Registers
{
    float value;
} registers;

void main()
{
    value = registers.value;
    imageStore(uImage, ivec2(0), vec4(registers.value + 0.1));
}